<nav class="px-4 py-3">
  <div class="container mx-auto">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-4">
        <%= link_to root_path, class: "flex items-center space-x-2 group" do %>
          <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-blue-500 to-blue-600 p-2 transform transition-all duration-300 group-hover:scale-110 group-hover:rotate-3">
            <%= image_tag "icon.svg", class: "w-full h-full text-white", alt: "Logo" %>
          </div>
          <span class="text-xl font-bold bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
            Drum Portal
          </span>
        <% end %>
      </div>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-1">
        <% if user_signed_in? %>
          <% if current_user.teacher? %>
            <%= link_to "Dashboard", teacher_root_path, class: "nav-link" %>
            <%= link_to "Lessons", teacher_lessons_path, class: "nav-link" %>
          <% else %>
            <%= link_to "Dashboard", student_root_path, class: "nav-link" %>
            <%= link_to "My Lessons", student_lessons_path, class: "nav-link" %>
          <% end %>
        <% end %>
      </div>

      <!-- User menu -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-300">
              <%= current_user.name %>
              <% if current_user.student? %>
                <span class="ml-2 px-2 py-1 text-xs rounded-full bg-gradient-to-r from-blue-500 to-blue-600">
                  <%= current_user.points %> pts
                </span>
              <% end %>
            </span>
            <%= button_to destroy_user_session_path, method: :delete, class: "btn-primary text-sm" do %>
              Sign Out
              <svg class="ml-2 -mr-1 h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
            <% end %>
          </div>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: "btn-primary" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
        <% end %>
      </div>
    </div>
  </div>
</nav> 