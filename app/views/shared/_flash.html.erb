<% flash.each do |name, msg| %>
  <div class="animate-fade-in-down mb-4" role="alert" aria-live="polite">
    <div class="<%= name == 'notice' ? 'bg-blue-900/50' : 'bg-red-900/50' %> backdrop-blur-lg border <%= name == 'notice' ? 'border-blue-500/50' : 'border-red-500/50' %> rounded-lg p-4 shadow-lg">
      <div class="flex items-start">
        <div class="flex-shrink-0" aria-hidden="true">
          <% if name == 'notice' %>
            <svg class="h-5 w-5 text-blue-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3 flex-1">
          <p class="text-sm font-medium <%= name == 'notice' ? 'text-blue-200' : 'text-red-200' %>">
            <%= msg %>
          </p>
        </div>
        <div class="ml-auto pl-3">
          <div class="-mx-1.5 -my-1.5">
            <button type="button" 
                    class="inline-flex rounded-md p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 <%= name == 'notice' ? 'text-blue-400 hover:bg-blue-800/50 focus:ring-blue-500' : 'text-red-400 hover:bg-red-800/50 focus:ring-red-500' %>"
                    onclick="this.closest('[role=alert]').remove()"
                    aria-label="Dismiss message">
              <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %> 