<!-- Hero Section -->
<div class="relative overflow-hidden">
  <!-- Animated background elements -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-500/20 via-purple-500/20 to-blue-600/20 animate-gradient"></div>
    <div class="absolute top-10 left-10 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
    <div class="absolute top-0 right-0 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
    <div class="absolute -bottom-8 left-20 w-72 h-72 bg-blue-500 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
  </div>

  <div class="relative pt-20 pb-24 sm:pt-32 sm:pb-40">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl text-center">
        <h1 class="animate-fade-in-up text-4xl font-bold tracking-tight sm:text-6xl bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-transparent">
          Welcome to Drum Portal
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-300 animate-fade-in-up animation-delay-200">
          Your gateway to learning drums online. Join our community of students and teachers to start your musical journey.
        </p>
        <div class="mt-10 flex items-center justify-center gap-x-6 animate-fade-in-up animation-delay-400">
          <%= link_to "Get Started", new_user_registration_path, class: "btn-primary text-lg" %>
          <%= link_to "Learn More", "#features", class: "text-gray-300 hover:text-white transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Features Section -->
<div class="py-24 sm:py-32" id="features">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-base font-semibold leading-7 text-blue-400">Learn Faster</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-white sm:text-4xl">Everything you need to master drums</p>
      <p class="mt-6 text-lg leading-8 text-gray-300">Start your drumming journey with our comprehensive learning platform.</p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-16 lg:max-w-none lg:grid-cols-3">
        <!-- Feature 1 -->
        <div class="card p-8 transform hover:-translate-y-2 transition-all duration-300">
          <dt class="flex items-center gap-x-3 text-xl font-semibold leading-7 text-white">
            <div class="rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 p-2">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16m-7 6h7" />
              </svg>
            </div>
            Expert Teachers
          </dt>
          <dd class="mt-4 text-base leading-7 text-gray-300">Learn from professional drummers with years of teaching experience.</dd>
        </div>

        <!-- Feature 2 -->
        <div class="card p-8 transform hover:-translate-y-2 transition-all duration-300">
          <dt class="flex items-center gap-x-3 text-xl font-semibold leading-7 text-white">
            <div class="rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 p-2">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
              </svg>
            </div>
            Structured Learning
          </dt>
          <dd class="mt-4 text-base leading-7 text-gray-300">Follow a proven curriculum designed to take you from beginner to advanced.</dd>
        </div>

        <!-- Feature 3 -->
        <div class="card p-8 transform hover:-translate-y-2 transition-all duration-300">
          <dt class="flex items-center gap-x-3 text-xl font-semibold leading-7 text-white">
            <div class="rounded-lg bg-gradient-to-r from-blue-500 to-blue-600 p-2">
              <svg class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="M16 8v8m-4-5v5m-4-2v2m-2 4h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            Track Progress
          </dt>
          <dd class="mt-4 text-base leading-7 text-gray-300">Monitor your improvement with detailed progress tracking and achievements.</dd>
        </div>
      </dl>
    </div>
  </div>
</div> 