<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-white">Teacher Dashboard</h1>
    <%= link_to new_teacher_lesson_path, class: "btn-primary" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
      </svg>
      New Lesson
    <% end %>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <div class="card">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-white">Recent Lessons</h2>
        <div class="mt-6 flow-root">
          <ul role="list" class="-my-5 divide-y divide-gray-700/30">
            <%= render partial: 'teacher/lessons/lesson', collection: @lessons.limit(5) %>
          </ul>
          <div class="mt-6">
            <%= link_to teacher_lessons_path, class: "text-sm font-medium text-blue-400 hover:text-blue-300 flex items-center" do %>
              View all lessons
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="card">
      <div class="p-6">
        <h2 class="text-lg font-semibold text-white">Students</h2>
        <div class="mt-6 flow-root">
          <ul role="list" class="-my-5 divide-y divide-gray-700/30">
            <% @students.each do |student| %>
              <li class="py-4">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <div class="h-8 w-8 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                      <span class="text-sm font-bold text-white"><%= student.name.first.upcase %></span>
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-200 truncate"><%= student.name %></p>
                    <p class="text-sm text-gray-400 truncate"><%= student.email %></p>
                  </div>
                  <div class="inline-flex items-center">
                    <span class="badge">
                      <%= student.points %> points
                    </span>
                  </div>
                </div>
              </li>
            <% end %>
          </ul>
          <div class="mt-6">
            <%= link_to teacher_students_path, class: "text-sm font-medium text-blue-400 hover:text-blue-300 flex items-center" do %>
              View all students
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 