<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-2xl font-bold text-white">Students</h1>
  </div>

  <div class="card">
    <div class="p-6">
      <% if @students.any? %>
        <ul role="list" class="divide-y divide-gray-700/30">
          <% @students.each do |student| %>
            <li class="py-4">
              <div class="flex items-center space-x-4">
                <div class="flex-shrink-0">
                  <div class="h-10 w-10 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
                    <span class="text-sm font-bold text-white"><%= student.name.first.upcase %></span>
                  </div>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center justify-between">
                    <h3 class="text-sm font-medium text-gray-200">
                      <%= link_to student.name, teacher_student_path(student), class: "hover:text-blue-400 transition-colors duration-200" %>
                    </h3>
                    <span class="badge">
                      <%= student.points %> points
                    </span>
                  </div>
                  <p class="mt-1 text-sm text-gray-400">
                    <%= pluralize(student.assigned_lessons.count, 'lesson') %> assigned
                  </p>
                </div>
                <div>
                  <%= link_to teacher_student_path(student), class: "text-gray-400 hover:text-blue-400 transition-colors duration-200" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      <% else %>
        <div class="text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <p class="text-gray-400">No students yet.</p>
        </div>
      <% end %>
    </div>
  </div>
</div> 