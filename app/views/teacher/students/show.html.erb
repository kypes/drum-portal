<div class="space-y-6">
  <div class="flex justify-between items-center">
    <div class="flex items-center space-x-4">
      <div class="flex-shrink-0">
        <div class="h-12 w-12 rounded-full bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
          <span class="text-lg font-bold text-white"><%= @student.name.first.upcase %></span>
        </div>
      </div>
      <div>
        <h1 class="text-2xl font-bold text-white"><%= @student.name %></h1>
        <p class="text-gray-400"><%= @student.email %></p>
      </div>
    </div>
    <div class="glass-panel px-4 py-2 flex items-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-400 mr-2" viewBox="0 0 20 20" fill="currentColor">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
      </svg>
      <span class="text-sm font-medium text-gray-400">Points:</span>
      <span class="ml-2 text-lg font-bold text-blue-400"><%= @student.points %></span>
    </div>
  </div>

  <div class="card">
    <div class="p-6">
      <h2 class="text-lg font-semibold text-white mb-4">Assigned Lessons</h2>
      <% if @lessons.any? %>
        <ul role="list" class="divide-y divide-gray-700/30">
          <%= render partial: 'teacher/lessons/lesson', collection: @lessons %>
        </ul>
      <% else %>
        <div class="text-center py-8">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <p class="text-gray-400">No lessons assigned yet.</p>
          <div class="mt-4">
            <%= link_to new_teacher_lesson_path(assigned_to_id: @student.id), class: "btn-primary" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z" clip-rule="evenodd" />
              </svg>
              Assign New Lesson
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 