<div class="flex space-x-3" id="<%= dom_id(comment) %>">
  <div class="flex-shrink-0">
    <span class="h-10 w-10 rounded-full bg-indigo-100 flex items-center justify-center">
      <%= comment.user.name.first %>
    </span>
  </div>
  <div class="flex-grow">
    <div class="text-sm">
      <span class="font-medium text-gray-900"><%= comment.user.name %></span>
      <% if comment.user.teacher? %>
        <span class="ml-1 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
          Teacher
        </span>
      <% end %>
    </div>
    <div class="mt-1 text-sm text-gray-700">
      <%= comment.content %>
    </div>
    <div class="mt-2 text-xs text-gray-500">
      <%= time_ago_in_words(comment.created_at) %> ago
    </div>
  </div>
</div> 